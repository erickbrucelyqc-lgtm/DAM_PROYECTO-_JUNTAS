<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/iv_perfil_miembro"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/images"
        android:scaleType="centerCrop"
        android:contentDescription="Foto de perfil del miembro"
        android:background="@drawable/bg_input_field_shadow2"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_nombre_miembro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Nombre de Usuario del Miembro"
        app:layout_constraintStart_toEndOf="@+id/iv_perfil_miembro"
        app:layout_constraintEnd_toStartOf="@+id/iv_estado_pago" app:layout_constraintTop_toTopOf="@+id/iv_perfil_miembro"
        app:layout_constraintBottom_toBottomOf="@+id/iv_perfil_miembro"/>

    <ImageView
        android:id="@+id/iv_estado_pago"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_check" android:contentDescription="Estado de pago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        /> </androidx.constraintlayout.widget.ConstraintLayout>